<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- Connection settings -->
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:5432/news</property> 
		<!--<property name="hibernate.connection.url">jdbc:postgresql://192.168.40.23:5432/cjproject</property>--> 
		<property name="hibernate.connection.username">giwonjung</property>
		<property name="hibernate.connection.password">1</property>
		
		<!-- SQL dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

		<!-- Print executed SQL to stdout -->
		<property name="show_sql">true</property>

		<!-- Update database on startup -->
		<property name="hibernate.hbm2ddl.auto">update</property>

		<!-- Set the current session context -->
		<property name="current_session_context_class">thread</property>
		<!-- Annotated entity classes -->
		<mapping class="com.scrapbot.entity.entities.NewsArticle" />
		<mapping class="com.scrapbot.entity.entities.NewsCompany" />
		<mapping class="com.scrapbot.entity.entities.User" />
	</session-factory>

</hibernate-configuration>